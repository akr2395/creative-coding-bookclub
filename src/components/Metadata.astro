---
import { DOMAIN } from '../constants.js'

// Canonical URL
const canonicalUrl = `${DOMAIN}${Astro.url.pathname}`;

// Open Graph
const title = Astro.props.title ?? 'Creative Coding Bookclub'
const description = Astro.props.description ?? 'The Creative Coding Bookclub is a new event to challenge and inspire eachother with practical coding challenges, by following a book yearly, and sharing our journey online and in-person';
const keywords = Astro.props.keywords ?? 'Creative Coding, Bookclub, JavaScript'
const ogType = Astro.props.ogType ?? 'article';
const ogImage = Astro.props.ogImage ?? `${DOMAIN}/ogimage-2025-01-27.jpeg`;
const ogImageWidth = Astro.props.ogImageWidth ?? '940';
const ogImageHeight = Astro.props.ogImageHeight ?? '470';
const ogLocale = Astro.props.ogLocale ?? 'en_GB';
---

<!-- Global Metadata -->
<meta charset='UTF-8' />
<meta name='viewport' content='width=device-width, initial-scale=1' />

<!-- Canonical URL -->
<link rel='canonical' href={canonicalUrl} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name='title' content={title} />
<meta name='description' content={description} />
<meta name='keywords' content={keywords} />

<!-- Open Graph Metadata -->
<meta name='og:title' content={title} />
<meta name='og:description' content={description} />
<meta property='og:type' content={ogType} />
<meta property='og:url' content={canonicalUrl} />
<meta property='og:image' content={ogImage} />
<meta property='og:image:width' content={ogImageWidth} />
<meta property='og:image:height' content={ogImageHeight} />
<meta property='og:locale' content={ogLocale} />
